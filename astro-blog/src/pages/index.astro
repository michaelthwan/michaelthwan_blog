---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TimelineEntry from '../components/TimelineEntry.astro';

// Dynamic duration for current role (started Nov 2024)
const startDate = new Date(2024, 10); // month is 0-indexed
const now = new Date();
const totalMonths = (now.getFullYear() - startDate.getFullYear()) * 12 + (now.getMonth() - startDate.getMonth());
const yrs = Math.floor(totalMonths / 12);
const mos = totalMonths % 12;
const masterDuration = [yrs && `${yrs} yr${yrs > 1 ? 's' : ''}`, mos && `${mos} mo${mos > 1 ? 's' : ''}`].filter(Boolean).join(' ');

const experience = [
    {
        year: '2024', logoSrc: '/img/front-page/mastercard_logo.jpg', logoAlt: 'Mastercard',
        role: 'Lead Data Scientist',
        company: `Mastercard · Vancouver, BC · Nov 2024 – Present · ${masterDuration}`,
        achievements: [
            'Engineered <strong>Decision Intelligence Pro (DI Pro)</strong> fraud detection platform for credit and debit transactions. Optimized the Databricks ML pipeline and infrastructure, accelerating model training by 3x while significantly reducing operational costs.',
        ],
    },
    {
        year: '2021', logoSrc: '/img/front-page/oocl_logo.jpg', logoAlt: 'OOCL',
        role: 'Senior Data Scientist',
        company: 'OOCL · Hong Kong · Aug 2021 – Sep 2023 · 2 yrs 2 mos',
        achievements: [
            'Led <strong>Customer Service Automation</strong> — LLM + RAG with LangChain, cutting email reply time from 5–10 min to seconds.',
            'Built <strong>EDI AI Developer</strong> for GenAI-driven API migration across 20k+ customers — 82% accuracy, 8,000+ human-days saved.',
            'Developed <strong>Shipment Assignment Optimization</strong> via CPLEX — <strong>$200M annual profit increase</strong> on Trans-Pacific and Asia-Europe routes.',
            'Built <strong>Customer Demand &amp; Profit Forecast</strong> with hierarchical ML (LightGBM / PyTorch).',
            'Led 3 concurrent projects with a team of 12 data scientists.',
        ],
    },
    {
        year: '2018', logoSrc: '/img/front-page/oocl_logo.jpg', logoAlt: 'OOCL',
        role: 'Data Scientist',
        company: 'OOCL · Hong Kong · Sep 2018 – Aug 2021 · 3 yrs',
        achievements: [
            'Collaborated with <strong>Microsoft Research Asia</strong> on empty repositioning — replaced linear programming with reinforcement and supervised learning.',
            'Built <strong>Network Optimization Engine</strong> using genetic algorithms for container disruption recovery, improving accuracy from 75% to 87%.',
        ],
    },
    {
        year: '2017', logoSrc: '/img/front-page/oocl_logo.jpg', logoAlt: 'OOCL',
        role: 'Software Engineer (ML)',
        company: 'OOCL · Hong Kong · Apr 2017 – Sep 2018 · 1 yr 6 mos',
        achievements: [
            'Built <strong>Empty Repositioning Optimization</strong> engine with linear programming — <strong>reduced $36M in annual equipment costs</strong> (4% of $900M).',
        ],
    },
    {
        year: '2014', logoSrc: '/img/front-page/oocl_logo.jpg', logoAlt: 'OOCL',
        role: 'Software Engineer (Full-stack)',
        company: 'OOCL · Hong Kong · Jun 2014 – Apr 2017 · 2 yrs 11 mos',
        achievements: [
            'Built core ERP components and customer-facing systems on J2EE/Oracle and MEAN stacks, supporting billion-scale shipping operations.',
            'Delivered route cost calculator and sailing schedule search engine processing 30M+ routes.',
        ],
    },
];

const education = [
    {
        year: '2020', logoSrc: '/img/front-page/cuhk_logo.jpg', logoAlt: 'The Chinese University of Hong Kong',
        role: 'The Chinese University of Hong Kong',
        degree: 'Master of Science — Data Science and Business Statistics',
        company: '2020 – 2022',
    },
    {
        year: '2011', logoSrc: '/img/front-page/cuhk_logo.jpg', logoAlt: 'The Chinese University of Hong Kong',
        role: 'The Chinese University of Hong Kong',
        degree: 'Bachelor of Engineering — System Engineering & Engineering Management, Information Technology',
        company: '2011 – 2014',
    },
];
---

<Base title="Michael Wan" isHomepage={true}>
    <Header logoText="Michael Wan" />

    <!-- Bio Hero -->
    <section class="bio-hero l-page">
        <div class="bio-avatar-wrap">
            <img src="/img/mw-black.png" alt="MW" class="bio-avatar" />
        </div>
        <div class="bio-info">
            <h1 class="bio-name">Michael Wan</h1>
            <p class="bio-tagline">Lead Data Scientist · Deep Learning, LLM & AI Specialist</p>
            <p class="bio-desc">
                I build AI systems that optimize enterprise operations — from LLM-powered automation
                to large-scale optimization engines. I also write interactive explainers on AI and
                deep learning.
            </p>
            <div class="bio-links">
                <a href="/blog" class="bio-btn bio-btn-primary">
                    <svg width="15" height="15" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="1.5" y="1.5" width="13" height="13" rx="2" stroke="currentColor" stroke-width="1.4" fill="none"/>
                        <path d="M4.5 5.5h7M4.5 8h7M4.5 10.5h4.5" stroke="currentColor" stroke-width="1.2" stroke-linecap="round"/>
                    </svg>
                    Blog
                </a>
                <a href="https://github.com/michaelthwan" target="_blank" rel="noopener noreferrer" class="bio-btn bio-btn-icon" aria-label="GitHub">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0 1 12 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                    </svg>
                </a>
                <a href="https://www.linkedin.com/in/michaelthwan" target="_blank" rel="noopener noreferrer" class="bio-btn bio-btn-icon" aria-label="LinkedIn">
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                </a>
            </div>
        </div>
    </section>

    <!-- Career Timeline -->
    <section class="bio-timeline l-page">
        <h2 class="timeline-section-title">Experience</h2>
        {experience.map(entry => <TimelineEntry {...entry} />)}
    </section>

    <!-- Education -->
    <section class="bio-timeline l-page">
        <h2 class="timeline-section-title">Education</h2>
        {education.map(entry => <TimelineEntry {...entry} />)}
    </section>

    <Footer />
</Base>
